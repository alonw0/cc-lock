{
  "name": "cc-lock",
  "version": "0.2.0",
  "private": true,
  "description": "Lock yourself out of Claude Code CLI",
  "author": "Alon Wolenitz",
  "repository": {
    "type": "git",
    "url": "https://github.com/alonw0/cc-lock.git"
  },
  "homepage": "https://github.com/alonw0/cc-lock#readme",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r clean",
    "build:menubar": "cd macos/CCLock && swift build -c release",
    "build:windows-tray": "pnpm --filter @cc-lock/windows-tray build",
    "package:windows-tray": "pnpm --filter @cc-lock/windows-tray package",
    "bundle:menubar": "bash macos/CCLock/bundle.sh",
    "bundle:menubar:install": "bash macos/CCLock/bundle.sh --install",
    "bundle:menubar:dmg": "bash macos/CCLock/bundle.sh --dmg",
    "bundle:menubar:sign": "bash macos/CCLock/bundle.sh --sign",
    "test": "pnpm --filter @cc-lock/daemon test"
  },
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "electron"
    ]
  },
  "devDependencies": {
    "@types/node": "^25.2.3"
  }
}
