{
  "name": "@cc-lock/core",
  "version": "0.2.0",
  "description": "Shared types, IPC protocol definitions, and challenge generators for cc-lock",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/alonw0/cc-lock#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/alonw0/cc-lock.git",
    "directory": "packages/core"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cc-lock"
  ],
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepack": "cp ../../LICENSE .",
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  }
